    class WebThread extends Thread {

        String name;
        URL url;
        JEditorPane show;
        JTextArea TextArea;

        WebThread(String name,String urltxt, JEditorPane jEditorPaneTest, JTextArea txtAstatusTest) {
            this.name = name;
            this.show = jEditorPaneTest;
            this.TextArea = txtAstatusTest;
            url = verifyUrl(urltxt);
        }

        private URL verifyUrl(String url) {
            URL verifiedUrl = null;
            try {
                verifiedUrl = new URL(url);
            } catch (Exception e) {
                return null;
            }
            return verifiedUrl;
        }

        @Override
        public void run() {
            String status = name + "Start\n";
            TextArea.setText(status);
            setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            try {
                URLConnection conn = url.openConnection();
                Map<String, List<String>> map = conn.getHeaderFields();
                
                status += "Printing Response Header...\n";
                
                for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                    status += entry.getKey() +":"+entry.getValue()+"\n";
                }

                status += "\nGet Response Header By Key ...\n";
                String server = conn.getHeaderField("Server");

                if (server == null) {
                    status += "Key 'Server' is not found!";
                } else {
                    status += "Server - " + server;
                }
                status += "\n Done";
            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            }
            
            TextArea.setText(status);
            
            try {
                show.setPage(url);
            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            } finally {
                setCursor(Cursor.getDefaultCursor());
                status += "\n" + name + " Stop";
                TextArea.setText(status);
            }
        }
    }

